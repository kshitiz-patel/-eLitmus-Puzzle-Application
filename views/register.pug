  <body>
    <nav class="navbar navbar-expand-lg p-3">
      <div class="container"><a class="navbar-brand text-white" href="/" style="font-size: 2.6rem;">SLEUTHSCAPE</a>
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"><i class="fas fa-bars" style="color:#fff; font-size:28px;"></i></span></button>
        <div class="collapse navbar-collapse justify-content-end py-2" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item mx-3"><a class="nav-link" href="/">Home</a></li>
            <li class="nav-item mx-3"><a class="nav-link" href="/rules">Rules &amp; Regulations</a></li>
            <li class="nav-item ms-3"><a class="nav-link" href="/register">Register</a></li>
          </ul>
        </div>
      </div>
    </nav>
    <section>
      <div class="container">
        <div class="row justify-content-center my-5">
          <div class="col-md-3">
            <h1 class="text-center mb-5">Registration</h1>
            <form action="/detail" method="post">
              <div class="mb-3">
                <input class="form-control rounded-0" type="name" name="Team Leader Name" aria-describedby="emailHelp" placeholder="Name" required="" autofocus="">
              </div>
              <div class="mb-3">
                <input class="form-control rounded-0" type="email" name="email" aria-describedby="emailHelp" placeholder="Email Address" required="">
              </div>
              <div class="mb-3">
                <input class="form-control rounded-0" id="p1" type="password" name="password" required="" placeholder="Password">
              </div>
              <div class="mb-3">
                <input class="form-control rounded-0" id="p2" type="password" name="confirmPassword" required="" placeholder="Confirm Password">
              </div>
              <div class="mb-3">
                <input class="form-control rounded-0" id="p2" type="password" name="unique" required="" placeholder="Unique Code">
              </div>
              <div class="text-center">
                <button class="btn btn-outline-light border-3 rounded-5 fs-6 fw-bold mt-4 px-4" type="submit">Register</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js" integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE" crossorigin="anonymous"></script>
